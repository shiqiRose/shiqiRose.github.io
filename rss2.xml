span class="line">      &lt;ul id=&quot;top_ul&quot;&gt;</span><br><span class="line">    &lt;li&gt;A&lt;/li&gt;</span><br><span class="line">&lt;li&gt;B&lt;/li&gt;</span><br><span class="line">&lt;li&gt;C&lt;/li&gt;</span><br><span class="line">&lt;li&gt;D&lt;/li&gt;</span><br><span class="line">  &lt;/ul&gt;</span><br><span class="line">  &lt;ul id=&quot;bottom_ul&quot;&gt;</span><br><span class="line">    &lt;li&gt;A&lt;/li&gt;</span><br><span class="line">&lt;li&gt;B&lt;/li&gt;</span><br><span class="line">&lt;li&gt;C&lt;/li&gt;</span><br><span class="line">&lt;li&gt;D&lt;/li&gt;</span><br><span class="line">  &lt;/ul&gt;</span><br><span class="line">  </span><br><span class="line">   &lt;script type=&quot;text/javascript&quot;&gt;</span><br><span class="line">    var ul_0=document.getElementById(&quot;top_ul&quot;);</span><br><span class="line">    // getChildren(ul_0)[0].style.backgroundColor=&quot;red&quot;;</span><br><span class="line">    getFirstChild(ul_0).style.backgroundColor=&quot;red&quot;;</span><br><span class="line">    getLastChild(ul_0).style.backgroundColor=&quot;red&quot;;</span><br><span class="line">    </span><br><span class="line">getPrevNode(getLastChild(ul_0)).style.backgroundColor=&quot;blue&quot;;</span><br><span class="line">getNextNode(getFirstChild(ul_0)).style.backgroundColor=&quot;green&quot;;</span><br><span class="line"></span><br><span class="line">var ul_1=document.getElementById(&quot;bottom_ul&quot;);</span><br><span class="line">getIndexChildNode(ul_1,2).style.backgroundColor=&quot;red&quot;;</span><br><span class="line"></span><br><span class="line">var res=getBrothNodes(getIndexChildNode(ul_1,2));</span><br><span class="line">for(var i=0;i&lt;res.length;i++)&#123;</span><br><span class="line"> res[i].style.backgroundColor=&quot;green&quot;;</span><br><span class="line">&#125;</span><br><span class="line">    //(1)获取某个元素所有子元素</span><br><span class="line">function getChildren(ele)&#123;</span><br><span class="line">  if(ele)&#123;</span><br><span class="line">     return  ele.children;</span><br><span class="line">  &#125;</span><br><span class="line">&#125;</span><br><span class="line"></span><br><span class="line">//(2)获取某个元素里面第一个子节点</span><br><span class="line">function getFirstChild(ele)&#123;</span><br><span class="line">  if(ele)&#123;</span><br><span class="line">    return ele.firstElementChild || ele.firstChild;</span><br><span class="line">  &#125;</span><br><span class="line">&#125;</span><br><span class="line"></span><br><span class="line">//(3)获取某个元素里面最后一个子节点</span><br><span class="line">function getLastChild(ele)&#123;</span><br><span class="line">  if(ele)&#123;</span><br><span class="line">    return ele.lastElementChild || ele.lastChild; </span><br><span class="line">  &#125;</span><br><span class="line">&#125;</span><br><span class="line">    //(4)获取某个元素前面的兄弟节点</span><br><span class="line">function getPrevNode(ele)&#123;</span><br><span class="line"> if(ele)&#123;</span><br><span class="line">    return ele.previousElementSibling || ele.previousSibling;</span><br><span class="line"> &#125; </span><br><span class="line">&#125;</span><br><span class="line"> //(5)获取某个元素后面的兄弟节点</span><br><span class="line"> function getNextNode(ele)&#123;</span><br><span class="line">   if(ele)&#123;</span><br><span class="line">   return ele.nextElementSibling || ele.nextSibling</span><br><span class="line">  &#125;</span><br><span class="line"> &#125;</span><br><span class="line">//(6)获取某个元素中任意一个下标子节点</span><br><span class="line">function getIndexChildNode(ele,index)&#123;</span><br><span class="line">  if(ele)&#123;</span><br><span class="line">    return  ele.children[index];</span><br><span class="line">  &#125;</span><br><span class="line">  </span><br><span class="line"></span><br><span class="line">&#125;</span><br><span class="line"></span><br><span class="line">//(7)获取某个元素所有兄弟节点//排除自己</span><br><span class="line">        function getBrothNodes(ele)&#123;</span><br><span class="line">   var items=new Array();</span><br><span class="line">   var j=0;</span><br><span class="line">  if(ele)&#123;</span><br><span class="line">     var children= ele.parentNode.children;</span><br><span class="line">     for(var i=0;i&lt;children.length;i++)&#123;</span><br><span class="line">   if(ele!=children[i])&#123;</span><br><span class="line">     items[j]=children[i];</span><br><span class="line"> j++;</span><br><span class="line">   &#125;</span><br><span class="line"> &#125;</span><br><span class="line"> return  items;</span><br><span class="line">  &#125;</span><br><span class="line">&#125;</span><br><span class="line"></span><br><span class="line">   &lt;/script&gt;</span><br><span class="line">      </span><br><span class="line">  &lt;/body&gt;</span><br><span class="line">&lt;/html&gt;</span><br></pre></td></tr></table></figure>]]></content:encoded>
      
